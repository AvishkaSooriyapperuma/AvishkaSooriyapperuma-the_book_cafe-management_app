<Window x:Class="PETCARE_Csharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PETCARE_Csharp"
        mc:Ignorable="d"
        Title="Splashscreen" 
        Height="500" 
        Width="650"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="true"
        Topmost="True"
        >
    <Border Background="White" CornerRadius="20" Margin="0,0,0,10">
        <StackPanel VerticalAlignment="Center">
            <Image Source="/images/book-cafe.png" 
                   Height="369"
                    RenderTransformOrigin="0.5,0.5" Margin="26,0,25,0"
                   />
            <TextBlock FontSize="30"
                       Padding="10"
                       Margin="0,0,0,0"
                       FontFamily="/Fonts/Poppins-Medium.ttf #Poppins"  
                       TextAlignment="Center" 
                       Text="Inventory management system  "
                       FontWeight="Medium"
                       Foreground="#363636"
                       />


        </StackPanel>
    </Border>
</Window>
